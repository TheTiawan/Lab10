<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Background="DarkTurquoise">
        <Menu VerticalAlignment="Top" Background="Transparent">
            <MenuItem Header="Файл">
                <MenuItem Header="О программе" Click="AboutProgram_Click"/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
            <ListBox x:Name="listbox" Margin="10,70,220,60"/>
        <TextBox x:Name="ResValueTextbox" HorizontalAlignment="Left" Margin="235,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="30"/>
        <TextBox x:Name="ResIndexTextbox" HorizontalAlignment="Left" Margin="235,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="30"/>
        <Button Content="Заполнить" HorizontalAlignment="Left" Margin="235,222,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="Fill_Click" />
        <Button Content="Найти" HorizontalAlignment="Left" Margin="235,270,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="Find_Click" />

    </Grid>
</Window>
